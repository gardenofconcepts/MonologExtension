<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="behat.monolog.service.monologinitializer.class">swestcott\MonologExtension\Context\Initializer\MonologInitializer</parameter>
        <parameter key="behat.monolog.logger_name"></parameter>
    </parameters>

    <services>
        <service id="behat.monolog.service.monologinitializer" class="%behat.monolog.service.monologinitializer.class%">
            <argument type="service" id="service_container" />
            <tag name="behat.context.initializer" />
        </service>
    </services>

</container>
